{{> header}}
<h2>Sign In</h2>
<div>{{message}}</div>
<div>
  <form action="/login" enctype="application/x-www-form-urlencoded" method="POST">
    <h4>Username</h4>
    <input type="text" name="username">
    <h4>Password</h4>
    <input type="password" name="password">
    <br>
    <br>
    <div>
      <input type="submit" value="Login">
      <input type="reset" value="Clear">
    </div>
  </form>
  <br>
  <div>
    <a href="http://localhost:4020/login/forgotpassword">Reset Password</a>
    <br>
    <a href="http://localhost:4020/">Cancel</a>
  </div>
</div>